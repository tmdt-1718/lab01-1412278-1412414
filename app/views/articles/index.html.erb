<% content_for :active_blog, "active" %>
<% content_for :title, "Blog" %>
<% if session[:firstname_current_user] && session[:lastname_current_user] %>
    <a href="<%= new_article_path %>" class="btn btn-white btn-primary active" style="float:right;">Post articles</a>
<% end %>
<h1>Articles</h1>
<% @articles.each do |article| %>
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="<%= article_path(article.id) %>"><%= article.title %></a>
        </div>
        <div class="panel-body">
            by <%= article.author %>
       </div>
        <div class="panel-body">
            <img src="<%= image_path(article.avartar) %>" class="img-rounded" alt="<%= article.title %>" width="304" height="236">
        </div>
        <div class="panel-body">
        	<%= article.summary %>
       	</div>
        <div class="panel-body">
            <span class="badge"><%= article.view %></span>
        </div>
    </div>
<% end %>